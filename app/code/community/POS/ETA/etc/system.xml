<?xml version="1.0"?>
<config>
	<sections>
        <cataloginventory translate="label" module="cataloginventory">
            <groups>
                <item_options translate="label comment">
                    <fields>
                        <allow_check_availability_status translate="label">
                            <label>Allow "Check Availability" Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>eta/system_config_backend_catalog_inventory_managestock</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_check_availability_status>
                        <unavailable_message translate="label">
                            <label>Unavailable Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </unavailable_message>
                    </fields>
                </item_options>
            </groups>
        </cataloginventory>
        <retailexpress>
			<groups>
				<eta>
					<label>Product ETA</label>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<enabled translate="label">
							<label>ETA Calculation Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<value>Empty</value>
						</enabled>
                        <eta_message translate="label">
                            <label>ETA Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </eta_message>
					</fields>
				</eta>
			</groups>
        </retailexpress>
	</sections>
</config>
