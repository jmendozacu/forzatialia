<?xml version="1.0"?>
<config>
    <modules>
        <POS_SimplePrice>
            <version>1.0.0</version>
        </POS_SimplePrice>
    </modules>
    <global>
        <models>
            <simpleprice>
                <class>POS_SimplePrice_Model</class>
            </simpleprice>
            <catalog>
                <rewrite>
                    <product_type_configurable_price>POS_SimplePrice_Catalog_Model_Product_Type_Configurable_Price</product_type_configurable_price>
                </rewrite>
                <rewrite>
                    <product>POS_SimplePrice_Catalog_Model_Product</product>
                </rewrite>
            </catalog>
            <salesrule>
                <rewrite>
                    <rule_condition_product>POS_SimplePrice_SalesRule_Model_Rule_Condition_Product</rule_condition_product>
                </rewrite>
            </salesrule>
        </models>
        <blocks>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>POS_SimplePrice_Catalog_Block_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
                <rewrite>
                    <product_price>POS_SimplePrice_Catalog_Block_Product_Price</product_price>
                </rewrite>
                <rewrite>
                    <product>POS_SimplePrice_Catalog_Block_Product</product>
                </rewrite>
            </catalog>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <simpleprice>
                    <file>simpleprice.xml</file>
                </simpleprice>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <simpleprice>
                        <class>simpleprice/observer</class>
                        <method>replacePriceHtml</method>
                    </simpleprice>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
</config>
