<?xml version="1.0"?>
<config>
	<tabs>
		<olegnax translate="label" module="celebritysettings">
			<label>Olegnax</label>
			<sort_order>205</sort_order>
		</olegnax>
	</tabs>
	<sections>
		<celebritysettings translate="label" module="celebritysettings">
			<label>Celebrity Theme Settings v2.0</label>
			<tab>olegnax</tab>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<celebritysettings_appearance translate="label">
